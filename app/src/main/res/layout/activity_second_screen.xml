<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screenStart"
    android:background="@drawable/screen2"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:gravity="center"
        >




        <ImageView
            android:id="@+id/titleOfGgalaxyGuard"
            android:layout_width="330dp"
            android:layout_height="320dp"
            app:srcCompat="@drawable/title_galaxy_guard"
            />






        <Button
            android:id="@+id/easyGameBtn"



            android:text="Easy Game"

            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A84839"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
        <Button
            android:id="@+id/HardGameBtn"

            android:layout_marginTop="50dp"


            android:text="Hard Game"

            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A84839"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/sensorGameBtn"

            android:layout_marginTop="50dp"


            android:text="Sensor Game"

            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A84839"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>